<%= link_to "new task", new_task_path %>

<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <p><%= task.details %></p>
  <p><%= task.completed %></p>
  <%= link_to "show task", task_path(task) %>
  <%= link_to "update task", edit_task_path(task) %>
  <%= link_to "delete task", "tasks/#{task.id}", method:'delete', data:{ confirm: "Are you sure?" } %>
<% end %>
